@model MvcOnlineTicariOtomasyon.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>SatisYap</h2>

<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.urunid)
    <input type="text" name="urunid" value="@ViewBag.vb2" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.personelid)
    @Html.DropDownListFor(x => x.personelid, (List<SelectListItem>)ViewBag.vb, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.cariid)
    @Html.TextBoxFor(x => x.cariid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" class="form-control" max="10" min="1" id="txt1" placeholder="Adet Giriniz" onchange="sum();" name="Adet" />
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" value="@ViewBag.vb3" class="form-control" id="txt2" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" name="ToplamTutar" value="0" class="form-control"  id="txt3" readonly />

    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
<br />


<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }

    }
</script>