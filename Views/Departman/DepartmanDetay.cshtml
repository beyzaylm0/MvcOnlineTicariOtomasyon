@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.d departmanı</li>
</ol>

<table class="table table-hover">
    <tr>
       
        <th>AD</th>
        <th>SOYAD</th>
      
        <th>SATIŞLAR</th>

    </tr>
    @foreach (var x in Model)
    {
<tr>

    <td>@x.PersonelAd @x.PersonelSoyad</td>
    

    <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:cornflowerblue">Satışlar</a></td>
</tr>
    }

</table>
