@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Detay</h2>
<br />
<ol class="breadcrumb mb-4">
   
</ol>

<table class="table table-hover">
    <tr>
        <th>FATURA ID</th>
        <th>AÇIKLAMA</th>
        <th>MİKTAR</th>
        <th>BİRİM FİYAT</th>
        <th>TUTAR</th>
  


    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.FaturaKalemID</td>
    <td>@x.Açıklama</td>
    <td>@x.Miktar</td>
    <td>@x.BirimFiyat</td>
    <td>@x.Tutar</td>
  
</tr>
    }

</table>

<a href="/Fatura/YeniKalem/" class="btn btn-default" style="background-color:lightcoral">Yeni Kalem Girişi</a>