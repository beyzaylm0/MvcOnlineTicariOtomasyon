@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası:@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered" style="margin-top:20px;margin-left:20px;margin-right:20px ">
    <tr>

        <th>Takip No</th>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Detay</th>


    </tr>

    @foreach (var k in Model)
    {

        <tr>
            <td>
                @k.TakipKodu
            </td>
            <td>
                @k.Personel
            </td>
            <td>
                @k.Alici
            </td>
            <td>
                @k.Tarih
            </td>

            <td><a href="/CariPanel/CariKargoTakip/@k.TakipKodu" class="btn btn-default" style="background-color:lightcoral;color:white"> Detay</a></td>


        </tr>
    }

</table>
